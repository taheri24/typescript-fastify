    "version": "0.2.0",
    
    "configurations": [
         
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
             
            "runtimeArgs": [
                "-r","ts-node/register/transpile-only",
                "-r","./src/register",
                
            ],
            "args": ["${workspaceFolder}/src/index.ts"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
			"internalConsoleOptions": "openOnSessionStart",
